{
	"name": "messenger-demo-dev",
	"private": true,
	"scripts": {
		"start": "AGENTS=2 pnpm network",
		"network": "pnpm build:happ && concurrently -k \"UI_PORT=1420 pnpm -F ui start\" \"pnpm launch\"",
		"launch": "concurrently-repeat \"pnpm tauri dev --no-watch\" $AGENTS",
		"test": "pnpm build:happ && pnpm -F tests test",
		"build:happ": "nix build -L .#messenger-demo_happ.meta.debug -o workdir/messenger-demo.happ",
		"package": "nix build -L .#messenger-demo_happ -o workdir/messenger-demo.happ && pnpm -F ui package && hc web-app pack workdir",
		"network:android": "pnpm build:happ && concurrently -k \"UI_PORT=1420 pnpm -F ui start\" \"pnpm tauri dev\" \"pnpm tauri android dev\"",
		"build:zomes": "CARGO_TARGET_DIR=target cargo build --release --target wasm32-unknown-unknown --workspace --exclude messenger-demo-tauri",
		"tauri": "tauri"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@eslint/js": "^9.0.0",
		"concurrently": "^8.2.2",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"new-port-cli": "^1.0.0",
		"prettier": "^3.2.5",
		"typescript-eslint": "^8.0.0",
		"typescript": "^5.4.5",
		"@tauri-apps/cli": "^2.0.0-rc",
		"concurrently-repeat": "^0.0.1",
		"internal-ip-cli": "^2.0.0"
	},
	"type": "module",
	"engines": {
		"pnpm": ">=9.0.0"
	},
	"hcScaffold": {
		"template": "/nix/store/7xd0v86pfxinhw6p49p78vqkipjr3a9a-hc-scaffold/template"
	}
}
